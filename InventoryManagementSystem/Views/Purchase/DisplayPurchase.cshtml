@model IEnumerable<InventoryManagementSystem.Models.Purchase>

@{
    ViewBag.Title = "DisplayPurchase";
}

<h2>Display Purchases</h2>

<p>
    @Html.ActionLink("Purchase more", "PurchaseProduct", new { }, new { @class = "btn btn-warning" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Purchased Product")
        </th>
        <th>
            @Html.DisplayName("Purchased Quantity")
        </th>
        <th>
            @Html.DisplayName("Purchased Date")
        </th>
        <th>
            @Html.DisplayName("Action")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Purchase_product)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Purchase_quantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Purchase_date)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditPurchase", new { id=item.id }, new {@class="btn btn-info"}) |
            @Html.ActionLink("Details", "PurchaseDetails", new { id=item.id }, new { @class = "btn btn-success" }) |
            @Html.ActionLink("Delete", "DeletePurchase", new { id=item.id }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
