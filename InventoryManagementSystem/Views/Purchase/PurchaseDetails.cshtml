@model InventoryManagementSystem.Models.Purchase

@{
    ViewBag.Title = "PurchaseDetails";
}

<h2>Purchase Details</h2>

<div>
    <h4>Purchased Product</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Product Name")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Purchase_product)
        </dd>

        <dt>
            @Html.DisplayName("Purchased Quantity")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Purchase_quantity)
        </dd>

        <dt>
            @Html.DisplayName("Purchased Date")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Purchase_date)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Back", "DisplayPurchase", "Purchase", new { @class = "btn btn-danger" }) |
    @Html.ActionLink("Edit", "EditPurchase", new { id = Model.id }, new { @class = "btn btn-info" })
</p>
