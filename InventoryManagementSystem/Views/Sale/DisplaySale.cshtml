@model IEnumerable<InventoryManagementSystem.Models.Sale>

@{
    ViewBag.Title = "DisplaySale";
}

<h2>Display Sale</h2>

<p>
    @Html.ActionLink("Add Sale", "SaleProduct", new { }, new { @class = "btn btn-warning" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Sold Product")
        </th>
        <th>
            @Html.DisplayName("Sale Quantity")
        </th>
        <th>
            @Html.DisplayName("Sale Date")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Sale_product)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sale_quantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sale_date)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditSale", new { id=item.id }, new {@class="btn btn-info"}) |
            @Html.ActionLink("Details", "SaleDetails", new { id=item.id }, new { @class = "btn btn-success" }) |
            @Html.ActionLink("Delete", "DeleteSale", new { id=item.id }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
